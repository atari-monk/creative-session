{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "build",
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
